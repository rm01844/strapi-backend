{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "excerpt": {
      "type": "text"
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::team-member.team-member",
      "inversedBy": "team_member"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "News",
        "Tips",
        "Reviews",
        "Tutorials",
        "Company"
      ]
    },
    "tags": {
      "type": "string"
    },
    "readingTime": {
      "type": "integer"
    },
    "featured": {
      "type": "boolean"
    }
  }
}
